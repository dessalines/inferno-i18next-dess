{
	"env": {
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
		"inferno"
	],
  "extends": [
    "plugin:inferno/recommended"
  ],
  "rules": {
    "no-use-before-define": "off",
    "object-curly-spacing": "off",
    "padded-blocks": "off",
    "prefer-template": "off"
  }
}
